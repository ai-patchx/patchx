{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/worker",
    "rootDir": "src/worker"
  },
  "include": ["src/worker/**/*"],
  "exclude": ["node_modules", "dist"]
}